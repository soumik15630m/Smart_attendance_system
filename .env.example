# Server
# postgresql+asyncpg://user:pass@host:port/db
DATABASE_URL=postgresql+asyncpg://neondb_owner:***********@ep-restless-***.aws.neon.tech/neondb

# Cache mode: auto | upstash_rest | redis
CACHE_BACKEND=auto

# Redis target
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Auto-start local Redis if unavailable
AUTO_START_LOCAL_REDIS=true
# Optional override command
# LOCAL_REDIS_START_CMD=redis-server --port 6379 --save "" --appendonly no
LOCAL_REDIS_START_CMD=
LOCAL_REDIS_START_TIMEOUT_SECONDS=12
PREFER_DOCKER_REDIS=true

# Upstash REST (optional)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Security
SECRET_KEY=change-this-to-a-secure-random-string
API_KEY=my-secret-admin-key-2026

# App
DEBUG=True
SIMILARITY_THRESHOLD=0.5
TZ=Asia/Kolkata

# Camera client
SERVER_IP=127.0.0.1
SERVER_PORT=8000
CAMERA_INDEX=0

# Optional CUDA bin path
# CUDA_PATH_BIN=C:\Program Files\NVIDIA GPU Computing Toolkit\CUDA\v12.8\bin
